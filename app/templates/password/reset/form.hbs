<form class="ap-form-login" {{action 'save' on='submit'}}>
  {{#bs-form-group error=email-error help=email-error}}
    {{input
      name='email'
      value=model.email
      placeholder=(t 'fields.email')
      class='form-control input-lg'}}
  {{/bs-form-group}}
  <div class="form-actions">
    {{#bs-form-group}}
      {{bs-submit t='actions.reset' lg=true}}
    {{/bs-form-group}}
    {{#if base-error}}
      <p class="text-danger">{{base-error}}</p>
    {{/if}}
  </div>
</form>
