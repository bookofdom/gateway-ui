{{ap-list-link
    class='ap-inverse ap-unsortable'
    path='proxy-endpoint.edit'
    icon='the-essentials-129'
    t=model.name}}

{{#each model.components as |component|}}
  {{#unless component.isNew}}
    {{#if component.single}}
      {{ap-list-link
        path='proxy-endpoint-component.edit'
        action='proxy-endpoint-component-edit'
        arg1=component
        icon='the-essentials-072'
        t=component.name
        index=id}}
    {{/if}}
    {{#if component.multi}}
      {{ap-list-link
        path='proxy-endpoint-component.edit'
        action='proxy-endpoint-component-edit'
        arg1=component
        icon-type='gateway'
        icon='multiproxy'
        t=component.name
        index=id}}
    {{/if}}
    {{#if component.js}}
      {{ap-list-link
        path='proxy-endpoint-component.edit'
        action='proxy-endpoint-component-edit'
        arg1=component
        icon='file-type-content-055'
        t=component.name
        index=id}}
    {{/if}}
  {{/unless}}
{{/each}}

{{ap-list-link
    class='ap-inverse ap-unsortable'
    path='proxy-endpoint-components.new'
    icon='the-essentials-104'
    t='actions.new'}}
