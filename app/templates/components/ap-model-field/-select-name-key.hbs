{{#x-select
  name=name
  id=idName
  value=value
  required=required
  disabled=disabled
  class='form-control'}}

  {{#if prompt}}
    {{#x-option}}{{t prompt x=label}}{{/x-option}}
  {{/if}}

  {{#each options as |option|}}
    {{#x-option value=option.value}}{{t option.nameKey}}{{/x-option}}
  {{/each}}

{{/x-select}}
