{{#if new-resource-route}}
  {{#ap-list-nav-simple-icon class='pull-right'}}
    {{ap-list-link
      t='actions.new'
      icon='the-essentials-010'
      action='new-resource'
      arg1=(query-params next=-1)}}
  {{/ap-list-nav-simple-icon}}
{{/if}}

{{#x-select
  name=name
  id=idName
  value=value
  required=required
  disabled=disabled
  class='form-control'
  as |xs|}}

  {{#if prompt}}
    {{#xs.option}}{{prompt}}{{/xs.option}}
  {{/if}}

  {{#each options as |option|}}
    {{#xs.option value=option}}{{option.name}}{{/xs.option}}
  {{/each}}

{{/x-select}}
