{{#each fields as |field|}}
  {{#ap-model-form-group
    model=model
    name=field.name
    label=field.label
    help=field.help
    type=field.type
    required=field.required
    inline=inline
    horizontal=horizontal}}
    {{ap-model-field
      model=model
      name=field.name
      label=field.label
      help=field.help
      type=field.type
      required=field.required
      option-groups=option-groups
      show-placeholder=show-placeholders}}
  {{/ap-model-form-group}}
{{/each}}

{{yield}}

{{ap-form-actions
  inline=inline
  horizontal=horizontal
  show-save=show-save
  show-cancel=show-cancel
  show-delete=deletable}}

{{ap-model-form-group
  model=model
  name='base'
  label=false
  inline=inline
  horizontal=horizontal}}
