{{#each field in fieldsList}}
  {{#ap-model-form-group
    model=model
    field=field.field
    inline=inline
    horizontal=horizontal}}
    {{ap-model-field
      model=model
      field=field.field
      options=field.options
      show-placeholder=show-placeholders}}
  {{/ap-model-form-group}}
{{/each}}

{{yield}}

{{ap-form-actions
  inline=inline
  horizontal=horizontal
  show-save=show-save
  show-cancel=show-cancel
  show-delete=deletable}}

{{ap-model-form-group
  model=model
  field='base'
  label=''
  inline=inline
  horizontal=horizontal}}
