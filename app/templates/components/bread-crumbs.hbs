{{#if breadCrumbs}}
  <li>
    {{#link-to 'application'}}
      {{t 'nav.home'}}
    {{/link-to}}
  </li>
  {{#each breadCrumbs as |crumb|}}
    <li class="separator">
      {{ap-icon icon='arrows-006'}}
    </li>
    <li class="{{if crumb.isCurrent 'active'}}">
      {{#if crumb.linkable}}
        {{#link-to crumb.path}}
          {{t crumb.label}}
        {{/link-to}}
      {{else}}
        {{t crumb.label}}
      {{/if}}
    </li>
  {{/each}}
{{/if}}
