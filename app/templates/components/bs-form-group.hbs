<label for="{{label-for}}" class="{{control-label-classes}}">{{text}}{{#if required}}<b>*</b>{{/if}}</label>

{{#if inline}}
  {{#unless is-boolean}}
    {{yield}}
    {{#if secondary-text}}
      <span class="help-block">{{secondary-text}}</span>
    {{/if}}
  {{/unless}}

  {{#if is-boolean}}
    <div class="{{boolean-type-class}}">
      <label>
        {{yield}}
      </label>
      {{#if secondary-text}}
        <span class="help-block">{{secondary-text}}</span>
      {{/if}}
    </div>
  {{/if}}
{{/if}}

{{#unless inline}}
<div class="{{control-wrapper-classes}}">

  {{#unless is-boolean}}
    {{yield}}
    {{#if secondary-text}}
      <span class="help-block">{{secondary-text}}</span>
    {{/if}}
  {{/unless}}

  {{#if is-boolean}}
    <div class="{{boolean-type-class}}">
      <label>
        {{yield}}
      </label>
      {{#if secondary-text}}
        <span class="help-block">{{secondary-text}}</span>
      {{/if}}
    </div>
  {{/if}}

</div>
{{/unless}}
