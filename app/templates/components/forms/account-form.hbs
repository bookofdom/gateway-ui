<div class="row">
  <div class="col-sm-2">
    <p class="text-right">Edit Account</p>
  </div>
  <div class="col-sm-5">
    {{#ap-model-form-group
      model=model
      name='name'
      label='fields.account_name'
      required=required}}
        {{input
          type='text'
          name='account_name'
          id='account_name'
          value=model.name
          required=true
          class='form-control input-lg'}}
    {{/ap-model-form-group}}
  </div><!-- /.col -->
</div><!-- /.row -->
<div class="row">
  <div class="col-sm-2">
    <p class="text-right">Edit Subscription</p>
  </div>
  <div class="col-sm-5">
    <ul class="list-group">
      {{#each option-groups.plan as |plan|}}
        <li class="list-group-item">
          <p>
            &nbsp;&nbsp;{{ap-radio value=plan.value checked=model.plan}}
            <strong>{{plan.name}}</strong>
            ${{plan.amountPerMonth}} / mo.
            <br>
            <br>
            <ul>
              <li>{{t (concat 'types.plans.descriptions.' plan.value '.developers')}}</li>
              <li>{{t (concat 'types.plans.descriptions.' plan.value '.endpoints')}}</li>
              <li>{{t (concat 'types.plans.descriptions.' plan.value '.js-execution')}}</li>
              <li>{{t (concat 'types.plans.descriptions.' plan.value '.support')}}</li>
            </ul>
          </p>
        </li>
      {{/each}}
    </ul>
  </div><!-- /.col -->
  <div class="col-sm-5">
    {{#if (and isSubscriptionEnabled model.isBillable)}}
      {{forms/stripe-card-inline-form model=model.card ownerModel=model}}
    {{/if}}
  </div><!-- /.col -->
</div><!-- /.row -->

{{partial 'components/forms/base-form-actions'}}
