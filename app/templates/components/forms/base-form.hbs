{{#each fields as |field|}}
  {{#ap-model-form-group
    model=model
    name=field.name
    label=field.label
    help=field.help
    type=field.type
    required=field.required
    inline=inline
    horizontal=horizontal}}
    {{ap-model-field
      model=model
      name=field.name
      label=field.label
      help=field.help
      type=field.type
      required=field.required
      disabled=(or field.disabled model.isDeleted)
      readonly=field.readonly
      prompt=field.prompt
      option-groups=option-groups
      show-placeholder=show-placeholders}}
  {{/ap-model-form-group}}
{{/each}}
