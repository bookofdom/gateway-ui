<div class="row">
  <div class="col-sm-9">
    {{#bs-form-group error=number-error help=number-error}}
      {{input
        name='cc_number'
        value=model.card.number
        placeholder=(t 'fields.cc_number')
        pattern='[0-9]{13,16}'
        required='required'
        class='form-control'}}
    {{/bs-form-group}}
  </div><!-- /.col -->
  <div class="col-sm-3 text-center">
    {{ap-payment-icon provider=model.card.cardType.slug}}
  </div><!-- /.col -->
</div><!-- /.row -->

<div class="row">
  <div class="col-sm-4">
    {{#bs-form-group error=expiry-error}}
      {{input
        name='cc_exp_month'
        value=model.card.exp_month
        placeholder=(t 'fields.cc_exp_month')
        pattern='[0-9]{2}'
        required='required'
        class='form-control'}}
    {{/bs-form-group}}
  </div><!-- /.col -->
  <div class="col-sm-5">
  {{#bs-form-group error=expiry-error help=expiry-error}}
    {{input
      name='cc_exp_year'
      value=model.card.exp_year
      placeholder=(t 'fields.cc_exp_year')
      pattern='[0-9]{4}'
      required='required'
      class='form-control'}}
  {{/bs-form-group}}
  </div><!-- /.col -->
</div><!-- /.row -->
<div class="row">
  <div class="col-sm-4">
    {{#bs-form-group error=cvc-error help=cvc-error}}
      {{input
        name='cc_cvc'
        value=model.card.cvc
        placeholder=(t 'fields.cc_cvc')
        required='required'
        class='form-control'}}
    {{/bs-form-group}}
  </div><!-- /.col -->
  <div class="col-sm-5">
    {{#bs-form-group}}
      {{input
        name='cc_address_zip'
        value=model.card.address_zip
        placeholder=(t 'fields.cc_address_zip')
        required='required'
        class='form-control'}}
    {{/bs-form-group}}
  </div><!-- /.col -->
</div><!-- /.row -->
