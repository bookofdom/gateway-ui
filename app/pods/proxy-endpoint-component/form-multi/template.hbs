{{#ap-model-form
    model=model
    fields=fields
    option-groups=option-groups
    show-delete=true}}
  <br>
  {{#each model.before as |transform|}}
    {{render 'proxy-endpoint-component-transformation.inline-before-form' transform}}
  {{/each}}

  {{#unless model.isNew}}
    {{#ap-panel-edit t='resources.proxy-endpoint-component-call_plural'}}
      {{ap-table-model
        models=model.calls
        delete-action='delete-proxy-endpoint-component-call'
        edit-path='proxy-endpoint-component-call.edit'
        indexModel=callsIndexModel
        option-groups=calls-option-groups
        component-name='forms/proxy-endpoint-component-call-inline-tabular-form'}}
      {{ap-button-block-new
        t='resources.proxy-endpoint-component-call'
        action='new-proxy-endpoint-component-call'}}
    {{/ap-panel-edit}}
  {{/unless}}

  {{#each model.after as |transform|}}
    {{render 'proxy-endpoint-component-transformation.inline-after-form' transform}}
  {{/each}}
{{/ap-model-form}}
