{{#ap-model-form
    model=model
    fields=fields
    option-groups=option-groups
    show-delete=true}}
  <br>
  {{#each model.before as |transform|}}
    {{forms/proxy-endpoint-component-transformation-inline-form before=true model=transform option-groups=transformation-option-groups}}
  {{/each}}

  {{#each model.calls as |call|}}
    {{forms/proxy-endpoint-component-call-inline-form model=call indexModel=callsIndexModel option-groups=calls-option-groups}}
  {{/each}}

  {{#each model.after as |transform|}}
    {{forms/proxy-endpoint-component-transformation-inline-form after=true model=transform option-groups=transformation-option-groups}}
  {{/each}}
{{/ap-model-form}}
