{{#bs-form-group}}
  {{input
      name='identification'
      value=identification
      type='email'
      placeholder=(t 'fields.email')
      class='form-control input-lg'}}
{{/bs-form-group}}
{{#bs-form-group}}
  {{input
      name='password'
      value=password
      type='password'
      placeholder=(t 'fields.password')
      class='form-control input-lg'}}
{{/bs-form-group}}
<div class="form-actions">
  {{#bs-form-group}}
    {{bs-submit t='actions.login' lg=true}}
    <br class="visible-xs">
    {{#if registration_enabled}}
      {{link-to (t 'actions.sign-up') 'registration' class='btn btn-link'}}
    {{/if}}
    {{link-to (t 'actions.reset-password') 'password.reset' class='btn btn-link'}}
  {{/bs-form-group}}
  {{#if base-error}}
    <p class="text-danger">{{t base-error}}</p>
  {{/if}}
</div>
