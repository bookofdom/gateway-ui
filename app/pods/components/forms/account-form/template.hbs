<div class="row">
  <div class="col-sm-2">
    <p class="text-right">{{t 'actions.edit-x' x='resources.account'}}</p>
  </div>
  <div class="col-sm-4">
    {{#ap-model-form-group
      model=model
      name='name'
      label='fields.account_name'
      required=required
      show-label=false}}
        {{input
          type='text'
          name='account_name'
          id='account_name'
          value=model.name
          required=true
          class='form-control input-lg'}}
    {{/ap-model-form-group}}
  </div><!-- /.col -->
</div><!-- /.row -->
<div class="row">

  {{#if subscription.enabled}}
    <div class="col-sm-2">
      <p class="text-right">{{t 'actions.edit-x' x='resources.plan'}}</p>
    </div>
    <div class="col-sm-5">
      <ul class="list-group">
        {{#each plans as |plan|}}
          <li class="list-group-item">
            <p>
              &nbsp;&nbsp;{{ap-radio value=plan checked=model.plan}}
              <strong>{{plan.name}}</strong>
              ${{plan.dollars}} / mo. ({{plan.javascript_timeout}}s {{t 'fields.javascript_timeout'}})
            </p>
          </li>
        {{/each}}
      </ul>
    </div><!-- /.col -->
    <div class="col-sm-5">
      {{#unless changedPlanPaymentRequired}}
        {{#if isNonZeroPlanAmount}}
          {{#bs-button t='actions.change-payment' action='changePayment' style='info'}}{{/bs-button}}
        {{/if}}
      {{/unless}}
    </div><!-- /.col -->
  {{/if}}

  <div class="col-sm-5 col-sm-offset-2">
    {{#bs-form-group}}
      {{#if model.errors.base}}
        <p class="text-danger">{{model.errors.base.firstObject.message}}</p>
      {{/if}}
    {{/bs-form-group}}
    {{partial 'components/forms/base-form-actions'}}
  </div><!-- /.col -->
</div><!-- /.row -->

{{#if enableConfirmDelete}}
  {{#ember-wormhole to="modal"}}
    {{#confirm-delete-modal isVisible=confirm-delete}}
      <p>
        {{t 'prompts.type-x-confirm-delete' resource='resources.account' x=confirmDeleteTarget}}
      </p>
      {{input name='confirmDeleteText' value=confirmDeleteText placeholder=confirmDeleteTarget class='form-control'}}
    {{/confirm-delete-modal}}
  {{/ember-wormhole}}
{{/if}}
