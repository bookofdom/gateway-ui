{{ap-list-link
    class='ap-inverse ap-unsortable'
    path='proxy-endpoint.edit'
    icon='the-essentials-129'
    t=model.name}}
{{ap-list-link
  class='ap-inverse ap-unsortable'
  path='proxy-endpoint-schemas'
  icon='the-essentials-102'
  t='resources.proxy-endpoint-schema_plural'}}

{{#each model.components as |component|}}
  {{#unless component.isNew}}
    {{#unless component.shared}}
      {{#if component.single}}
        {{ap-list-link
          path='proxy-endpoint-component.edit'
          arg1=component
          icon='the-essentials-072'
          t=component.name
          index=component.id}}
      {{/if}}
      {{#if component.multi}}
        {{ap-list-link
          path='proxy-endpoint-component.edit'
          arg1=component
          icon='multiproxy'
          t=component.name
          index=component.id}}
      {{/if}}
      {{#if component.js}}
        {{ap-list-link
          path='proxy-endpoint-component.edit'
          arg1=component
          icon='file-type-content-055'
          t=component.name
          index=component.id}}
      {{/if}}
      {{#if component.advanced}}
        {{ap-list-link
	  path='proxy-endpoint-component.edit'
          arg1=component
          icon='file-type-content-055'
          t=component.name
          index=component.id}}
      {{/if}}
    {{/unless}}
    {{#if component.shared}}
    {{ap-list-link
      path='proxy-endpoint-component.edit'
      arg1=component
      icon='shared-component'
      t=component.name
      index=component.id}}
    {{/if}}
  {{/unless}}
{{/each}}

{{ap-list-link
    class='ap-inverse ap-unsortable'
    path='proxy-endpoint-components.new'
    icon='the-essentials-104'
    t='actions.new'}}
