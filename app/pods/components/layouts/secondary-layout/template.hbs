<div class="ap-app-secondary">
  <div class="ap-app-secondary-sidebar {{if view.expanded 'expanded'}}">
    <a class="btn btn-default ap-toggle-nav visible-xs visible-sm" href="#" {{action 'toggleNav' target=view}}>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a><!-- /.btn -->

    {{#if sidebar}}
      {{component sidebar}}
    {{/if}}

  </div><!-- /.ap-app-secondary-sidebar -->
  <div class="ap-app-secondary-content">
    {{#if view.showBreadCrumbs}}
      {{bread-crumbs tagName='ol' classNames='breadcrumb'}}
    {{/if}}
    {{yield}}
  </div><!-- /.ap-app-secondary-content -->
</div><!-- /.ap-app-secondary -->
